
@using MvcCheckBoxList.Model;
@using Magicodes.Shop.Helpers;
@model Magicodes.WeiChat.Data.Models.WeiChat_User
@{
                ViewBag.Title = "个人中心";
                Layout = "~/Areas/App/Views/Shared/_Layout.cshtml";
}



< div class="aui-content my-header">
    <div class="my-info">
        <img src="@Model.HeadImgUrl"/>
