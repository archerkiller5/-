@section scripts{
    <script>
        $(function() {
            $('div.aui-content>ul li,div.div_url')
                .on('click',
                    function() {
                        location.href = $(this).data('url');
                    });
        });
    </script>
}

@section styles{
    <style type="text/css">
        .my-header {
            background-color: #e74c3c;
            margin-bottom: 0;
            position: relative;
        }

        .my-info {
            bottom: 0;
            padding: 10px;
            position: relative;
            text-align: center;           
            width: 100%;
        }

        .my-info img {
            border-radius: 50%;
            height: 80px;
            width: 80px;
        }

        .my-info p.nickname {
            color: #ffffff;
            font-size: 18px;
            margin-top: 5px;
        }

        .aui-list-view-cell { line-height: 26px; }

        .amount-info {
            background-color: #ffffff;
            overflow: hidden;
        }

        .amount-info p { font-size: 0.75em; }

        .amount-info p strong { font-size: 18px; }

        .aui-list-view-cell { line-height: 26px; }

        .amount-info .aui-col-xs-4 {
            height: 80px;
            padding: 15px 0;
            position: relative;
        }

        .amount-info .aui-col-xs-4:after {
            -webkit-transform: scale(1);
            -webkit-transform-origin: 0 0;
            border-left: 1px solid #ddd;
            bottom: 0;
            content: '';
            display: block;
            left: 0;
            pointer-events: none;
            position: absolute;
            right: 0;
            top: 0;
        }

        .amount-info .aui-col-xs-4:first-child:after { border: none; }
    </style>
}