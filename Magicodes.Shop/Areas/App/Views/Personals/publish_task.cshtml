

@{
    ViewBag.Title = "任务列表";
    Layout = "~/Areas/App/Views/Shared/_Layout.cshtml";
}


<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, width=device-width" />
    <title>任务列表</title>
    <style>
        * {
            font-family: "微软雅黑";
        }

        ul {
            margin: 0;
            padding: 0;
        }

        li {
            list-style: none;
        }

        h1 {
            margin: 0;
            padding: 0;
        }

        a {
            text-decoration: none;
        }

        p {
            margin: 0;
        }

        img {
            display: block;
        }

        .clearfix {
            clear: both;
        }

        body {
            width: 100%;
            margin: 0;
        }
        /*标题*/
        .gonggao_box {
            width: 100%;
            margin-left: auto;
            margin-right: auto;
            border-bottom: 1px solid #e6e6e6;
        }

        .gonggao {
            width: 88%;
            margin-left: auto;
            margin-right: auto;
        }

            .gonggao h1 {
                float: left;
                margin-top: 20px;
                margin-bottom: 20px;
                font-size: 20px;
                font-weight: normal;
            }
        /*列表*/
        .column_box {
            width: 100%;
            border-bottom: 1px solid #e6e6e6;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .column {
            display: block;
            width: 88%;
            margin-left: auto;
            margin-right: auto;
        }

            .column .zi {
                margin: 0;
                float: left;
                font-size: 16px;
                color: #4c4c4c;
            }

            .column img {
                height: 16px;
                float: right;
                padding-top: 4px;
            }


        /*底部导航*/
        .footer_nav_box {
            width: 100%;
            background-color: #3a8e99;
            z-index: 2;
            position: fixed;
            left: 0;
            bottom: 0;
        }

            .footer_nav_box .nav_box {
                display: block;
                width: 33.33%;
                padding-top: 10px;
            }

                .footer_nav_box .nav_box img {
                    margin-left: auto;
                    margin-right: auto;
                    height: 20px;
                }

                .footer_nav_box .nav_box span {
                    display: block;
                    text-align: center;
                    color: #FFF;
                    font-size: 16px;
                    line-height: 30px;
                }

            .footer_nav_box .nav_box {
                float: left;
            }

                .footer_nav_box .nav_box:hover {
                    background-color: #4cb7c5;
                }
    </style>
</head>

<body>
    <div>
        <!--标题-->
        <div class="gonggao_box">
            <div class="gonggao">
                <h1>任务列表</h1>
                <div class="clearfix"></div>
            </div>
        </div>
        <!--列表-->
        <asp:Repeater ID="rptList" runat="server">
            <ItemTemplate>
                <div class="column_box">
                    <a class="column" href="/Member/finish_task.aspx?id=<%#Eval(" id")%>
                        " target="_blank">
                        <span class="zi">
                            <%#Eval("Task_Title").ToString().Length>18?Eval("Task_Title").ToString().Substring(0,18)+"..":Eval("Task_Title")%>
                        </span>
                        <img src="/images/右箭头.png">
                        <div class="clearfix"></div>
                    </a>
                </div>

            </ItemTemplate>
            <FooterTemplate>
                <%#rptList.Items.Count == 0 ? "<div style='text-align:center; border-top:1px solid #e6e6e6; border-bottom:1px solid #e6e6e6; padding:2% 0;'>暂无数据</div>" : ""%></table>
            </FooterTemplate>
        </asp:Repeater>



       
    </div>
</body>
</html>
