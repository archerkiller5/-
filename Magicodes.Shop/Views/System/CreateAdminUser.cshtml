@model Magicodes.Shop.Models.CreateAdminUserViewModel
@{
    ViewBag.Title = "添加";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">主页</a>
            </li>
            <li>
                管理员管理
            </li>
            <li class="active">
                <a href="@Url.Action("CreateAdminUser", "System")">@ViewBag.Title</a>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.Title</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @Html.Partial("_Notifications")
                    @using (Html.BeginForm("CreateAdminUser", "System", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserName, new {@class = "col-md-2 control-label"})
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.UserName, new {@class = "form-control"})
                                <span class="help-block m-b-none">最长20个字符。</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.PhoneNumber, new {@class = "col-md-2 control-label"})
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.PhoneNumber, new {@class = "form-control"})
                                <span class="help-block m-b-none">请输入正确的手机号码。</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new {@class = "col-md-2 control-label"})
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.Password, new {@class = "form-control"})
                                <span class="help-block m-b-none">不得少于6个字符。</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.ConfirmPassword, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>


                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary" type="submit">提 交</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>