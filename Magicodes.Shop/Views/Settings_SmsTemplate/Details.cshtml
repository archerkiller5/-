@using Webdiyer.WebControls.Mvc;
@using Magicodes.WeiChat.Unity;

@model Magicodes.WeiChat.Data.Models.Settings.Settings_SmsTemplate

@{
    ViewBag.Title = "查看";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">主页</a>
            </li>
            <li>
                <a href="@Url.Action("Index")">上级页面</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <hr style="margin: 2px 2px 10px 2px;" />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TemplateCode)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TemplateCode)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.SignName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SignName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Content)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Content)
                        </dd>

                        <dt>
                           短信类型
                        </dt>

                        <dd>
                            @(Model.SmsType.GetEnumMemberDisplayName())
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Remark)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Remark)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CreateTime)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CreateTime)
                        </dd>

                        @*<dt>
                                @Html.DisplayNameFor(model => model.GroupId)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.GroupId)
                            </dd>*@

                        @*<dt>
                                @Html.DisplayNameFor(model => model.AllowTest)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AllowTest)
                            </dd>*@

                    </dl>
                    <p>                  
                        @Html.ActionLink("返回", "Index")
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/iCheck")
    <script type="text/javascript">
        $(function() {
            $("input[type=checkbox]")
                .iCheck({
                    checkboxClass: 'icheckbox_square-green',
                    radioClass: 'iradio_square-green',
                });
        });
    </script>
}